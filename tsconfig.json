{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ESNext",
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "dist",
        "baseUrl": "./src",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "paths": {
            "*": ["node_modules/*", "src/types/*"]
        },
        "lib": ["esnext"],
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "typeRoots": ["./src/types"]
}
